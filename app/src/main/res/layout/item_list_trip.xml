<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/item_list_trip_root">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/item_list_trip_title"
        android:layout_weight="6"
        android:gravity="start|center_vertical" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/item_list_trip_state"
        android:layout_weight="3.00" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_build_black_24dp"
        android:id="@+id/item_list_trip_edit"
        android:contentDescription="@string/item_list_image_edit_desc" />
</LinearLayout>