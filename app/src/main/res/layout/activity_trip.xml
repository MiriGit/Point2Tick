<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/activity_trip_root">
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_trip_tab"
        android:background="@color/APP_RED_LIGHT"
        app:tabIndicatorColor="@color/APP_RED"
        app:tabSelectedTextColor="@color/APP_BLACK" />
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_trip_pager"
        android:layout_below="@+id/activity_trip_tab" />
</RelativeLayout>